import os
import os.path
import sys
sys.path += ["../../build"]
import global_config
from   global_config import LIBUTIL

conf = global_config.get_conf(os.getcwd() , 2)
env  = Environment()
conf.update_env( env , [ LIBUTIL ] , link = False)

src_list    = Split("plot.c plot_dataset.c  plot_range.c plplot_driver.c plot_driver.c text_driver.c")
header_list = Split("plot.h plot_dataset.h  plot_range.h plot_const.h plot_driver.h  plplot_driver.h text_driver.h")

LIB = env.StaticLibrary("plot" , src_list)
lib_path     = "../lib"
include_path = "../include"
env.Install(lib_path    , LIB)
env.Install(include_path , header_list)


##################################################################
 
install     = env.Alias('install',[lib_path , include_path])

env.Install(conf.SDP_LIB , header_list)
env.Install(conf.SDP_LIB , LIB )
SDP_INSTALL = env.Alias('SDP_INSTALL' , [conf.SDP_INCLUDE , include_path , lib_path , conf.SDP_LIB])

Default( install )
