import os
import os.path
import sys
sys.path += ["../../build"]
import global_config
from   global_config import LIBUTIL
from   global_config import add_shared_library
from   global_config import add_static_library
from   global_config import add_header
from   global_config import get_targets



package      = "plot"
lib_path     = "../lib"
slib_path    = "../slib"
include_path = "../include"
bin_path     = "../bin"  

conf    = global_config.get_conf(os.getcwd() , "plot" , 2)
env     = Environment()
conf.update_env( env , [ LIBUTIL ] , link = False)
env.Append( CPPPATH = conf.PLPLOT_INCLUDE_PATH )

src_list    = Split("plot.c plot_dataset.c  plot_range.c plplot_driver.c plot_driver.c text_driver.c")
header_list = Split("plot.h plot_dataset.h  plot_range.h plot_const.h plot_driver.h  plplot_driver.h text_driver.h")

add_static_library( env , conf , lib_path , package , src_list)
add_shared_library( env , conf , slib_path , package , src_list)
add_header( env , conf , include_path , header_list )

(local) = get_targets( env , conf )
Default( local )



