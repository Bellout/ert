import os
import os.path
import sys
sys.path += ["../../build"]
import global_config
from   global_config import LIBUTIL
from   global_config import LIBECL
from   global_config import LIBRMS
from   global_config import add_program
from   global_config import get_target

package      = "rms"
lib_path     = "../lib"
include_path = "../include"
bin_path     = "../bin"  

conf = global_config.get_conf(os.getcwd() , package , 2)
env  = Environment()
conf.update_env( env , [ LIBRMS , LIBECL , LIBUTIL ] ,  ext_liblist = ["m" , "z" , "pthread"] , link = True)

add_program(env , conf ,  bin_path , "rms_extract" , "rms_extract.c" )
add_program(env , conf ,  bin_path , "rms_setname" , "rms_setname.c" )
add_program(env , conf ,  bin_path , "rms_stat"    , "rms_stat.c"    )
add_program(env , conf ,  bin_path , "rms_test"    , "rms_test.c"    )
add_program(env , conf ,  bin_path , "tag_list"    , "tag_list.c"    )

Default( bin_path )



